<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BudgetFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:background="@drawable/border_layout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이번 여행 예산"
                android:textColor="#404040" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/underline_background3"
                android:text="KRW(원)"
                android:textColor="#B5B5B5" />

            <EditText
                android:id="@+id/etBudget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#B5B5B5"
                android:ems="10"
                android:hint="비용을 입력하세요"
                android:inputType="text"
                android:textColor="#B5B5B5"
                android:textColorHint="#B5B5B5" />

        </LinearLayout>

        <Button
            android:id="@+id/budgetBtnOk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#C5E0B4"
            android:text="예산 입력하기"
            android:textColor="#FBFBFB"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</FrameLayout>