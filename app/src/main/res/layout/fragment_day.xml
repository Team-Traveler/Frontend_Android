<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameDay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DayFragment"
    android:background="@drawable/border_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/etCategoryTitle"
                android:layout_width="362dp"
                android:layout_height="37dp"
                android:background="@drawable/underline_background2"
                android:text="일일 가계부"
                android:textAlignment="center"
                android:textColor="#404040"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/editBtnCost"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:background="@drawable/underline_background"
                android:paddingBottom="0dp"
                android:text="편집"
                android:textColor="#707070" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/outerRvDay"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            tools:listitem="@layout/outer_cost_layout" />

        <Button
            android:id="@+id/addCostBtn"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:backgroundTint="#FBFBFB"
            android:text="비용추가"
            android:textColor="#404040"
            android:textSize="10sp" />
    </LinearLayout>

</FrameLayout>